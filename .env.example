# Cloudflare configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id
CLOUDFLARE_KV_API_TOKEN=your_cloudflare_api_token

# Cron secret for securing API endpoints
CRON_SECRET=your_secure_cron_secret

# Optional: Niconico cookies for sensitive content
NICO_COOKIES=sensitive_material_status=accept

# Preview deployment protection
PREVIEW_PROTECTION_KEY=your_preview_protection_key

# Admin authentication
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password

# Worker authentication
WORKER_AUTH_KEY=your_worker_auth_key

