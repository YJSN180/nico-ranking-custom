# Vercel KV configuration
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token

# Cloudflare KV configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_KV_NAMESPACE_ID=your_cloudflare_kv_namespace_id
CLOUDFLARE_KV_API_TOKEN=your_cloudflare_kv_api_token

# Admin authentication
ADMIN_KEY=your_secure_admin_key_32_chars_minimum
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# Debug endpoint authentication (development only)
DEBUG_TOKEN=your_secure_debug_token

# Cron secret for securing API endpoints
CRON_SECRET=your_cron_secret

# Optional: Niconico cookies for sensitive content
NICO_COOKIES=sensitive_material_status=accept